#!/usr/bin/env ruby
# ---
# title:  killprocess menu
# author: emil lenz
# email:  emillenz@protonmail.com
# date:   2023-05-08
# dependencies:
# - rofi
# ---

require 'notify-send'
require 'open3'
require 'English'

ROFI_CMD = %w[rofi -dmenu -no-custom -i -p killprocess].freeze

def main
        processes = `ps -e -o pid,comm`.lines.drop(1).map do |line|
                columns = line.strip.split(/\s+/)
                pid = columns[0]
                name = columns[1..].join(' ')
                [name, pid]
        end.to_h

        rofi_stdin = processes.keys.join("\n")
        select, status = Open3.capture2(*ROFI_CMD, stdin_data: rofi_stdin)
        exit 1 unless status.success?
        ps_id = processes[select.chomp]

        `sudo kill #{ps_id}`
        exit 1 unless $CHILD_STATUS.success?
        NotifySend.send('killprocess', select)
end

main
