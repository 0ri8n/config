#!/usr/bin/env ruby
# ---
# title:  killprocess menu
# author: emil lenz
# email:  emillenz@protonmail.com
# date:   2023-05-08
# dependencies:
# - rofi
# ---

require 'notify-send'
require 'open3'
require 'English'

ROFI_CMD = %w[rofi -dmenu -no-custom -i -p killprocess].freeze

def main
        pss = `ps -e`.lines.drop(1).map do |line|
                columns = line.split(/\s+/)
                name = columns[4..].join(' ').strip
                pid = columns[1]
                [name, pid]
        end.to_h

        rofi_stdin = pss.keys.join("\n")
        read, status = Open3.capture2(*ROFI_CMD, stdin_data: rofi_stdin)
        exit 1 unless status.success?
        ps_id = pss[read.chomp]

        `sudo kill #{ps_id}`
        exit 1 unless $CHILD_STATUS.success?
        NotifySend.send('killprocess', read)
end

main
