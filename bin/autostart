#!/usr/bin/env ruby
# -----
# title:  autostart
# author: emil lenz
# email:  emillenz@protonmail.com
# date:   2023-05-07
# -----

def main
        spawn_processes
        CMDS.each { |cmd| system(cmd) }
end

PROCESSES = [
        { ps: 'tmux', cmd: 'alacritty --command tmux new-session -A -s main', },
        { ps: 'emacsclient', cmd: 'emacs --daemon && emacsclient --reuse-frame', },
        { ps: 'xremap', cmd: "sudo xremap --watch=device #{ENV['HOME']}/.config/xremap/config.yml & disown", },
        { cmd: 'firefox --new-window https://google.com --new-window https://chat.openai.com', },
        { cmd: 'playerctld', },
        { cmd: 'unclutter', },
        { cmd: 'batsignal -bpe -w 50 -c 20 -d 5', },
        { cmd: 'keepassxc', },
].freeze

CMDS = [
        'xsetroot -solid "#ffffff"', # bg
        'xset dpms 0 0 0', # no screensaving
        'xset s off',
        'xset r off', # disable key repeat
].freeze

def spawn_processes
        processes = `ps -e`.lines.drop(1).map do |line|
                line.split(/\s+/)[4..].join(' ').strip
        end

        PROCESSES.each do |ps|
                ps[:ps] = ps[:cmd].split[0] if ps[:ps].nil?
                unless processes.include?(ps[:ps])
                        Process.detach(spawn(ps[:cmd], out: File::NULL, err: File::NULL))
                        puts("started: #{ps[:ps]}")
                end
        end
end

main
