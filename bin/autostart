#!/usr/bin/env ruby

# ---
# title:  autostart
# author: emil lenz
# email:  emillenz@protonmail.com
# date:   2023-05-07
# info:
# - starting daemons (emacs, tmux) and background processes (if not running)
# - running commands (to set some behaviour)
# ---

def main
        spawn_processes
        CMDS.each { |cmd| system(cmd) }
end

def spawn_processes
        processes = `ps -e -o comm`.lines.drop(1).map do |line|
                line.gsub(/tmux:.*/, 'tmux').chomp # HACK: delete(":") is from 'tmux: server'
        end

        PROCESSES.each do |ps|
                name = ps.split[0]
                unless processes.include?(name)
                        Process.detach(Process.spawn(ps, [:out, :err] => File::NULL))
                        puts("started: #{name}")
                end
        end
end

CMDS = [
        'xsetroot -solid "#f2f2f2"', # minimalist simple color bg => modus-vivendi dim-fg (distinguish apps with #000000 normal bg color from bg)
        'xset dpms 0 0 0', # no screensaving (activate manually)
        'xset s off',
        'xset r off', # disable key repeat (efficiency!)
].freeze

PROCESSES = [
        'tmux new-session -d -s main',
        'alacritty --command tmux new-session -n term -A -s main',
        'emacsclient --reuse-frame || (emacs --daemon && emacsclient --create-frame)',
        "xremap --watch=device --watch=config #{ENV['HOME']}/.config/xremap/config.yml & disown",
        'keepassxc',
        'playerctld',
        'unclutter',
        'batsignal -bpe -w 50 -c 20 -d 5',
].freeze

main
