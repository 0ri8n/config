# ---
#+title:  I3-status Configuration File
#+author: Emil Lenz
#+email:  emillenz@protonmail.com
#+date:   2024-01-19
#+info:   Minimalist setup. As the bar is visible except when explicitly toggled to view system info.
# ---

general {
  colors = true
  interval = 5

  # modus-operandi theme
  color_good = "#006800"
  color_degraded = "#6f5500"
  color_bad = "#a60000"

}

order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "volume master"
order += "tztime local"


wireless _first_ {
  format_up = "wifi: %essid %quality"
  format_down = ""
}

ethernet _first_ {
  format_up = "eth"
  format_down = ""
}

battery all {
  format = "bat: %status%percentage %emptytime"
  integer_battery_capacity = true
  last_full_capacity = false
  hide_seconds = true
  threshold_type = percentage
  low_threshold = 20
  format_down = ""
  status_full = "="
  status_chr = "+"
  status_bat = "-"
  status_unk = "?"
}

volume master {
  format = "%devicename: %volume "
  format_muted = "%devicename: mute "
  device = "default"
  mixer = "Master"
  mixer_idx = 0
}

tztime local {
  format = "%Y-%m-%d %H:%M"
}
